<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/nav_profile">

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.openpaytest.ui.view.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/to_movieReviewFragmentDialog"
            app:destination="@id/movieReviewFragmentDialog" >

            <argument
                android:name="review"
                app:argType="string" />

        </action>
    </fragment>
    <dialog
        android:id="@+id/movieReviewFragmentDialog"
        android:name="com.example.openpaytest.ui.view.profile.MovieReviewFragmentDialog"
        android:label="fragment_dialog_movie_review"
        tools:layout="@layout/fragment_dialog_movie_review" >

        <argument
            android:name="review"
            app:argType="string" />

    </dialog>

    <fragment
        android:id="@+id/nav_movies"
        android:name="com.example.openpaytest.ui.view.movies.MoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" />
</navigation>