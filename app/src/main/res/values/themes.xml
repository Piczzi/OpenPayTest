<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OpenPayTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="colorPrimary">@color/green_app</item>
        <item name="colorPrimaryVariant">@color/green_dark_app</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.OpenPayTest" parent="Base.Theme.OpenPayTest" />

    <style name="RoundedImageView" parent="">
        <item name="shapeAppearance">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NavigationHome">
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">9sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/green_selected</item>
    </style>

</resources>